pipeline {
    agent any
    environment {
        PATH = "${env.PATH}:/opt/sonarqube/bin:/opt/sonar-scanner-6.2.1.4610-linux-x64/bin"
        SONARQUBE_URL = 'http://localhost:9000/' // Replace with your SonarQube server URL
        SONARQUBE_CREDENTIALS = 'sonar-api-key' // Replace with your SonarQube token ID configured in Jenkins
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'pip install pytest'
            }
        }

        stage('Run Tests') {
            steps {
                sh 'python3 -m pytest test_addition.py'
            }
        }

        stage('SonarQube Analysis') {
            steps {
                withSonarQubeEnv('SonarQubeServer') { // 'SonarQube' is the name of the SonarQube server configured in Jenkins
                    sh '''
                        sonar-scanner \
                        -Dsonar.projectKey=SonarQubeServer \
                        -Dsonar.sources=.\
                        -Dsonar.host.url=$SONARQUBE_URL \
                        -Dsonar.login=$SONARQUBE_CREDENTIALS
                    '''
                }
            }
        }

        stage('Quality Gate') {
            steps {
                script {
                    def qg = waitForQualityGate()
                    if (qg.status != 'OK') {
                        error "Pipeline aborted due to quality gate failure: ${qg.status}"
                    }
                }
            }
        }
    }
}